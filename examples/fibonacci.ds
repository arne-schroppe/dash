#!/usr/local/bin/dash


fibonacci n =
  match n with
    0 -> 0
    1 -> 1
    _ -> (fibonacci (n - 1)) + (fibonacci (n - 2))
  end


do io with
  min = 0; max = 30
  io.print ("Enter a number (between \(min) and \(max)): ")
  input <- io.read-ln
  n = to-number input
  if n < min || n > max
    then io.print-ln ("The number should be between \(min) and \(max)")
    else do io with
      fib = fibonacci n
      io.print-ln ("Fibonacci number \(n) is \(fib)")
    end
end


